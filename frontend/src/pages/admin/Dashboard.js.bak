import React from 'react';

function AdminDashboard({ grievances }) {
  const handleAssign = (grievanceId, officerId) => {
    fetch('/api/admin/assign', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ grievanceId, officerId })
    });
  };

  const handleAccept = (grievanceId) => {
    fetch('/api/admin/accept', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ grievanceId })
    });
  };

  return (
    <div>
      <h2>Assign Grievances</h2>
      {grievances.map(g => (
        <div key={g._id}>
          <p>{g.title}</p>
          <button onClick={() => handleAssign(g._id, 'officer123')}>Assign</button>
        </div>
      ))}

      <h2>Pending Acceptance</h2>
      {/* Add similar UI for acceptance */}
    </div>
  );
}

export default AdminDashboard;